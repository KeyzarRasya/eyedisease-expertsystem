<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/output.css">
    <title>Eye Disease</title>
</head>
<body class="bg-gray-300">
    <form action="https://eyedisease.vercel.app/scan" method="post" class="h-full w-screen bg-gray-300 flex justify-center items-center shadow-xl flex-col">
        <div class="nav h-20 w-screen bg-white shadow-2xl mb-5 flex justify-center items-center">
            <h2 class="font-bold text-blue-400 text-2xl">Eye Disease Expert System</h2 class="font-bold text-blue-400 text-2xl">
        </div>
        <div class="h-3/6 w-4/5 bg-white rounded-md flex flex-col p-10">
            <% question.forEach((q, i) => { %> <!-- Loop untuk setiap pertanyaan -->
                <div class="question m-5 h-full border-b-2" id="<%= q[0] %>">
                    <div class="q">
                        <p class="text-xl"><%=i+1 %>. <%= q[1] %></p>
                    </div>
                    <div class="a m-3">
                        <select name="<%= q[0] %>" id="select-<%= q[0] %>" class="w-5/6 h-8 font-bold rounded-md text-center bg-blue-600 text-white shadow-2xl">
                            <option value="ya">Ya</option>
                            <option value="mungkinya">Mungkin Ya</option>
                            <option value="mungkin">Mungkin</option>
                            <option value="mungkintidak">Mungkin Tidak</option>
                            <option value="tidak">Tidak</option>
                        </select>
                    </div>
                </div>
            <% }); %>
            <div class="foots h-16 flex justify-center items-center">
                <button class="next h-12 bg-blue-600 w-36 text-white rounded-lg shadow-2xl" type="submit"">Submit</button>
            </div>
        </div>
    </form>
</body>
</html>
